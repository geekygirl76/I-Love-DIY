<h5>Unread Messages</h5>

<% @messages.each do |msg| %>
  <% if !msg.draft && msg.receiver_id == current_user.id && !msg.read  %>
    <a href="<%= open_message_url(msg) %>"><%= msg.title %></a>
    <br>
  <% end  %>
<% end %>



<h5>Read Messages</h5>

<% @messages.each do |msg| %>
  <% if !msg.draft && msg.receiver_id == current_user.id && msg.read %>
    <a href="<%= message_url(msg) %>"><%= msg.title %></a>
    <br>
  <% end  %>
<% end %>

<br>
====================================================
<h5>Sent Messages</h5>

<% @messages.each do |msg| %>
  <% if msg.sender_id == current_user.id %>
    <a href="<%= message_url(msg) %>"><%= msg.title %></a>
    <br>
  <% end  %>
<% end %>

<br>

<h5>Drafts</h5>

<% @messages.each do |msg| %>
  <% if msg.sender_id == current_user.id && msg.draft %>
    <a href="<%= message_url(msg) %>"><%= msg.title %></a>
    <br>
  <% end  %>
<% end %>
