<h5>Sent Messages</h5>

<% @messages.each do |msg| %>
  <% if msg.sender_id == current_user.id && msg.draft == "N" %>
    <a href="<%= message_url(msg) %>"><%= msg.title %></a>
    <br>
  <% end  %>
<% end %>

<br>

<h5>Drafts</h5>

<% @messages.each do |msg| %>
  <% if msg.sender_id == current_user.id && msg.draft == "Y" %>
    <a href="<%= message_url(msg) %>"><%= msg.title %></a>
    <br>
  <% end  %>
<% end %>
