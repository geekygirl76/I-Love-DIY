   nav.new-message{
     width: 700px;
     height: auto;
     margin:auto;
     background: rgb(228, 234, 233);
   padding: 5px 10px;
   border: 1px solid lightblue;
   }

   form.message-form{
     width:700px;
     min-height:500px;
     background: rgb(241, 246, 245);
     margin:auto;
   padding: 5px 10px;
   border: 1px solid lightblue;
   }


 </style>

