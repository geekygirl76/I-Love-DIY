

<body>
<h1>Create Instructable</h1>

<form action="<%= posts_url %>" method="post">
  <input type="hidden" name="authenticity_token"
         value="<%= form_authenticity_token %>" />



  <label for="post_title">
    Title
  <input
    type="text"
    name="post[title]"
    value="<%= @post.title %>"
    id="post_title">
  </label>
    <br>

  <label for="post_body" >
    Article
  <input class="article"
    type="textarea"
    name="post[body]"
    value="<%= @post.body %>"
    id="post_body">
  </label>
    <br>

  <label for="post_sub_id">Category</label>
  <select name="post[sub_id]" id="post_sub_id">
    <option value="">Choose Category(Sub)</option>
    <% Sub.all.each do |sub| %>
      <option
        <%= @post.sub_id == sub.id ? "selected" : nil  %>
        value="<%= sub.id %>"
        >
        
        <%= sub.title %>
      </option>
    <% end %>
  </select>
  <br>
  
  <label for="post_channel_id">Channel</label>
  <select name="post[channel_id]" id="post_channel_id">
    <option value="">Choose Channel</option>
    <% Channel.all.each do |channel| %>
      <option
        <%= @post.channel_id == channel.id ? "selected" : nil  %>
        value="<%= channel.id %>"
        >
        
        <%= channel.title %>
      </option>
    <% end %>
  </select>
  <br>
  

  <input type="submit" value="submit">

</form>
</body>