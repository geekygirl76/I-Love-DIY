
<head>
  <style>
  header{
    margin: 30px;

  }

  header > h1{
    font-weight: bold;
    font-size: 48px;
    text-align: center;
  }

  .post-form {
    margin: auto;
    width: 700px;
    border: 5px solid black;
  background: white;
  padding: 20px;
  }

  .post-form > label{
    display: block;
    margin: 20px 0 5px 0;
  }

  input[type="text"],
  input[type="textarea"]{
    display: inline-block;
    width: 400px;
    border: 1px solid lightgrey;

    padding: 5px 10px;
  }

  input[type="textarea"]{
    height: 100px;
  }

  button.create-post{
    background: green;
    color: white;
    font-weight: bold;
    padding: 5px 10px;
  }

  </style>
</head>


<body>
  <header>
      <h1>Create Post</h1>
   </header>

<form class="post-form" action="<%= posts_url %>" method="post" enctype="multipart/form-data">
  <input type="hidden" name="authenticity_token"
         value="<%= form_authenticity_token %>" />



  <label for="post_title">
    Title
  <input
    type="text"
    name="post[title]"
    value="<%= @post.title %>"
    id="post_title">
  </label>
    <br>

  <label for="post_body" >
    Article
  <textarea class="article"

    name="post[body]"

    id="post_body"><%= @post.body %>
    </textarea>
  </label>
    <br>

  <label for="post_sub_id">Subforum</label>
  <select name="post[sub_id]" id="post_sub_id">
    <option value="">Choose Category(Sub)</option>
    <% Sub.all.each do |sub| %>
      <option
        <%= @post.sub_id == sub.id ? "selected" : nil  %>
        value="<%= sub.id %>"
        >

        <%= sub.title %>
      </option>
    <% end %>
  </select>
  <br>

  <label for="post_channel_id">Channel</label>
  <select name="post[channel_id]" id="post_channel_id">
    <option value="">Choose Channel</option>
    <% Channel.all.each do |channel| %>
      <option
        <%= @post.channel_id == channel.id ? "selected" : nil  %>
        value="<%= channel.id %>"
        >

        <%= channel.title %> (<%= channel.sub.title %>)
      </option>
    <% end %>
  </select>
  <br>

  <label>
    Upload Picture

    <input type="file" name="post[photo]">

  </label>
 <button class="create-post">

  <input type="submit" value="submit">
  </button>

</form>
</body>