

<body>
<h1>Publish New Post</h1>

<form action="<%= sub_posts_url(@post.sub) %>" method="post">
  <input type="hidden" name="authenticity_token"
         value="<%= form_authenticity_token %>" />



  <label for="post_title">
    Title
  <input
    type="text"
    name="post[title]"
    value="<%= @post.title %>"
    id="post_title">
  </label>
    <br>

  <label for="post_body" >
    Article
  <input class="article"
    type="textarea"
    name="post[body]"
    value="<%= @post.body %>"
    id="post_body">
  </label>
    <br>

  <h4>Submit To This Sub: <%= @post.sub.title %></h4>


  <input type="submit" value="submit">

</form>
</body>