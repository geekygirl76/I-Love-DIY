
<head>
  <style>
    nav.new-post{
      width: 700px;
      height: auto;
      margin:auto;
      background: rgb(228, 234, 233);
    padding: 5px 10px;
    border: 1px solid lightblue;
    }

    form.post-form{
      width:700px;
      min-height:500px;
      background: rgb(241, 246, 245);
      margin:auto;
    padding: 5px 10px;
    border: 1px solid lightblue;
    }


  </style>
</head>
<body>
  <nav class='new-post'>
      <h1>Create Post</h1>
   </nav>

<form class="post-form" action="<%= posts_url %>" method="post" enctype="multipart/form-data">
  <input type="hidden" name="authenticity_token"
         value="<%= form_authenticity_token %>" >



  <label for="post_title">
    Title
  <input
    type="text"
    name="post[title]"
    value="<%= @post.title %>"
    id="post_title">
  </label>
    <br>

  <label for="post_body" >
    Article
  <textarea class="article"

    name="post[body]"

    id="post_body"><%= @post.body %>
    </textarea>
  </label>
    <br>

  <label for="post_sub_id">Subforum</label>
  <select name="post[sub_id]" id="post_sub_id">
    <option value="">Choose Category(Sub)</option>
    <% Sub.all.each do |sub| %>
      <option
        <%= @post.sub_id == sub.id ? "selected" : nil  %>
        value="<%= sub.id %>"
        >

        <%= sub.title %>
      </option>
    <% end %>
  </select>
  <br>

  <label for="post_channel_id">Channel</label>
  <select name="post[channel_id]" id="post_channel_id">
    <option value="">Choose Channel</option>
    <% Channel.all.each do |channel| %>
      <option
        <%= @post.channel_id == channel.id ? "selected" : nil  %>
        value="<%= channel.id %>"
        >

        <%= channel.title %> (<%= channel.sub.title %>)
      </option>
    <% end %>
  </select>
  <br>

  <label>
    Upload Picture

    <input type="file" name="post[photo]">

  </label>


 <button class="create-post">

  <input type="submit" value="submit">
  </button>

</form>
</body>