<head>
</head>
  <style>
    nav.new-post{
      width: 700px;
      height: auto;
      margin:auto;
      background: rgb(228, 234, 233);
    padding: 5px 10px;
    border: 1px solid lightblue;
    }

    form.post-form{
      width:700px;
      min-height:500px;
      background: rgb(241, 246, 245);
      margin:auto;
    padding: 5px 10px;
    border: 1px solid lightblue;
    }


  </style>

<body>
  <nav class="new-post">
   <form action="<%= posts_url %>" method="get">
     <input type="hidden" name="authenticity_token"
            value="<%= form_authenticity_token %>" />

     <label for="search_tag">
       Let's Make
     <input
       type="text"
       name="post[search]"

       id="post_search">
     </label>

     <a><input type="submit" value="Go!"></a>
   </form>
  </nav>

<form class="post-form" action="<%= post_url(@post) %>" method="post">
  <input type="hidden" name="authenticity_token"
         value="<%= form_authenticity_token %>" />

  <input type="hidden" name="_method" value="put">

  <label for="post_title">
    Title
  <input
    type="text"
    name="post[title]"
    value="<%= @post.title %>"
    id="post_title">
  </label>
    <br>

  <label for="post_body" >
    Article
  <textarea class="article"

    name="post[body]"
    value="<%= @post.body %>"
    id="post_body"><%= @post.body %>
    </textarea>
  </label>
    <br>

    <label for="post_sub_id">Subforum</label>
    <select name="post[sub_id]" id="post_sub_id">
      <option value="">Choose Category(Sub)</option>
      <% Sub.all.each do |sub| %>
        <option
          <%= @post.sub_id == sub.id ? "selected" : nil  %>
          value="<%= sub.id %>"
          >

          <%= sub.title %>
        </option>
      <% end %>
    </select>
    <br>

    <label for="post_channel_id">Channel</label>
    <select name="post[channel_id]" id="post_channel_id">
      <option value="">Choose Channel</option>
      <% Channel.all.each do |channel| %>
        <option
          <%= @post.channel_id == channel.id ? "selected" : nil  %>
          value="<%= channel.id %>"
          >

          <%= channel.title %> (<%= channel.sub.title %>)
        </option>
      <% end %>
    </select>
    <br>

    <label>
      Upload Picture

      <input type="file" name="post[photo]" value="<%= @post.photo %>">

    </label>



<button class="submit-button">
  <input type="submit" value="submit">
</button>
</form>

<footer>
  <li><h4>Do It Yourself, Make It Unique!</h4></li>
</footer>
</body>