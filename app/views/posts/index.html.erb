

<h1>All Posts</h1>

<ul>

  <% @posts.each do |post| %>
    <li><%= link_to post.title, post_url(post)%> ( Score: <%= post.score %>)
      <div class="thumb-pic">
        <%= image_tag post.photo.url(:medium) %>
    </div>
  <a><%= button_to "Delete!", post_url(post), method: :delete %></a>

  <%= link_to "Edit", edit_post_url(post) %>
    </li>
  <br>
  <% end %>

</ul>

