<head>
   <style>

   body{
     padding: 20px;
   }

   .posts > ul{
     float: right;
   }

   .posts > ul > li > a{
     display: block;
     float: left;
   }

   body{
     background: rgb(202, 227, 221);
   }

   nav.all-posts{
     width: 700px;
     height: auto;
     margin:auto;
     background: rgb(228, 234, 233);
   padding: 5px 10px;
   border: 1px solid lightblue;
   }

   main.all-posts{
     width:700px;
     min-height:500px;
     background: rgb(241, 246, 245);
     margin:auto;
   padding: 5px 10px;
   border: 1px solid lightblue;
   }



   nav >h3{
     font-weight:bold;
   }

  main.all-posts > ul{

   }

   main.all-posts > ul > li{
     float:left;
     width: 200px;
     margin: 15px;
   }

   footer.posts-footer{
       width:700px;
       height:60px;
       background: rgb(228, 234, 233);
       margin:auto;
     padding: 5px 10px;
     border: 1px solid lightblue;
   }



   footer > ul{
     float:left;
   }

   footer >ul> li{
     float: right;
     padding: 10px 15px;
   }


   </style>
</head>


<body>


<nav class="all-posts">
  <form action="<%= posts_url %>" method="get">
    <input type="hidden" name="authenticity_token"
           value="<%= form_authenticity_token %>" />

    <label for="search_tag">
      Let's Make
    <input
      type="text"
      name="post[search]"

      id="post_search">
    </label>

    <a><input type="submit" value="Go!"></a>
  </form>
</nav>

<main class="all-posts">
<ul class="group">

  <% @posts.each do |post| %>
    <li><%= link_to post.title, post_url(post)%> ( Score: <%= post.score %>)
      <div class="thumb-pic">
        <%= image_tag post.photo.url(:medium) %>
    </div>

    </li>

  <% end %>



</ul>

</main>

<footer class="posts-footer">
  <%= paginate @posts%>

</footer>
</body>