<!DOCTYPE html>

<html>
<head>
  <title>Diy</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if current_user %>
    <%= current_user.username %>
    <br>
  <%= link_to "Profile", user_url(current_user) %>
  <br>
    <%=  button_to "Log Out",session_url, method: :delete %>
  <% else  %>
    <%= link_to "Log In", new_session_url %>
    <br>
    <%= link_to "Sign Up", new_user_url %>
    <br>

  <% end  %>



  <%= link_to "Create Instructables", new_post_url %>
  <br>
  <%= link_to "Explore All Categories", subs_url %>
  <br>
  <%= link_to "Explore All Instructables", posts_url %>
  <br>
  <%=  flash[:errors].join(", ").html_safe if flash[:errors]%>
  <%=  flash[:notice].html_safe if flash[:notice]%>
<%= yield %>

</body>
</html>
