<!DOCTYPE html>
<html>
<head>
  <title>Diy</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  
  <% if current_user %>
    <%= current_user.username %>
    <%=  button_to "Log Out",session_url, method: :delete %>
  <% else  %>
    <%= link_to "Log In", new_session_url %>
    <%= link_to "Sign Up", new_user_url %>
  <% end  %>
  
  <%=  flash[:errors].join(", ").html_safe if flash[:errors]%>

<%= yield %>

</body>
</html>
