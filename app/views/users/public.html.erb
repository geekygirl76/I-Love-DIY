<head>
  <style>
  figure{
    width: 100px;
    height: auto;
  }

  main > .user-info{

    margin:50px;
  }

  main > .user-info > ul > li{
    padding: 10px 15px;
    font-weight: bold;
  }

  </style>
</head>



<body>
<main class="post-article other user-profile">
  <nav class="user">
      <ul class="group">
    <li><%= link_to "Write To Author", new_message_url %></li>
    </ul>
  </nav>

    <div class="user-info">
    <ul class="group">
      <li><h3>Username: <%= @user.username %></h3></li>

      <li><h3>Age: <%=@user.age%></h3></li>

      <li><h3>Gender: <%=@user.gender%></h3></li>


      <li><h3>Zip: <%=@user.zip%></h3></li>
    </ul>

<div class="user-pic">
  <figure class="user">
    <%= image_tag @user.photo.url(:thumb) %>
  </figure>
  </div>
  </div>
</main>



</body>
