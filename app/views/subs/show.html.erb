<head>
  <style>

  body{
    padding: 20px;
  }

  .posts > ul{
    float: right;
  }

  .posts > ul > li > a{
    display: block;
    float: left;
  }

  body{
    background: rgb(202, 227, 221);
  }

  nav.sub-show{
    width: 700px;
    height: auto;
    margin:auto;
    background: rgb(228, 234, 233);
  padding: 5px 10px;
  border: 1px solid lightblue;
  }

  main.posts-sub{
    width:700px;
    height:auto;
    background: rgb(241, 246, 245);
    margin:auto;
  padding: 5px 10px;
  border: 1px solid lightblue;
  }

  nav >h3{
    font-weight:bold;
  }

  footer.sub-footer{
      width:700px;
      height:auto;
      background: rgb(228, 234, 233);
      margin:auto;
    padding: 5px 10px;
    border: 1px solid lightblue;
  }
  </style>
</head>


<body>
<nav class="sub-show">

  <h3><%= @sub.title %></h3>


</nav>

<main class="posts-sub">
<ul class="posts group">
  <h3>Posts</h3>
  <% @sub.posts.each do |post| %>
   <li><%= link_to post.title, post_url(post) %>
     <%= image_tag post.photo.url(:thumb) %>
   </li>
   <br>
 <% end %>
</ul>
</main>

<footer class='sub-footer'>
<ul>
  <h3>Channels</h3>
  <% @sub.channels.each do |channel| %>
    <li><%= link_to channel.title, channel_url(channel) %></li>
  <% end %>
</ul>







</footer>
</body>