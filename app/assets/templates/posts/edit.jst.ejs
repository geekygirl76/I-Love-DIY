<h1>Edit Post</h1>

<form action="<%= post_url(@post) %>" method="post">
  <input type="hidden" name="authenticity_token"
         value="<%= form_authenticity_token %>" />

  <input type="hidden" name="_method" value="put">

  <label for="post_title">
    Title
  <input
    type="text"
    name="post[title]"
    value="<%= @post.title %>"
    id="post_title">
  </label>
    <br>

  <label for="post_body" >
    Article
  <input class="article"
    type="textarea"
    name="post[body]"
    value="<%= @post.body %>"
    id="post_body">
  </label>
    <br>



  <input type="submit" value="submit">

</form>