  }





  button.reply-button{
    color: white;
  }

  button.delete{
      border: 0
      background: transparent;
  }
  .title{
      color: black;
      display: inline;

  }
  figure.post-picture{
      border: 1px solid grey;
      margin-bottom:20px;
      padding:20px;
      border-radius:5px;
      background: #F8F8F8;
      box-shadow: 0 10px 10px #ccc;
  }


