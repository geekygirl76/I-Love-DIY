
<a href="#/">Explore All Posts</a>





<header class="post-header">
  <h1 class="title"><%= post.escape("title") %></h1>

  <a href="#">Collect</a>
     <br>
     <br>
     (Score: <%=post.escape("score")%>) <a href="/posts/<%=post.id%>/upvote">like</a> <a href="/posts/<%=post.id%>/downvote">dislike</a>
     <br>



<article class="post-article">
  <%= post.escape("body") %>
</article>

<figure class="post-picture">
<img src="<%= post.get("photo_url") %>">
</figure>

<form class="post-comment-form post-form" >
  <input type="hidden"
         name="comment[post_id]"
         value="<%= post.id %>">

  <label for="comment_body">
    Comment On This Post
  <input
    type="text"
    name="comment[body]"

    id="comment_body">
  </label>

   <button id="post-comment">Submit</button>

</form>

<ul class="comments"></ul>

<div class="comments-new"></div>

<ul class="comments">
  <% post.comments().each(function(comment){ %>
    <li class="root-comment"><%= comment.escape("body") %> (Published at:<%= comment.escape("created_at") %>)(Author:<%=  comment.escape("user_id") %>)

    <a href="/comments/<%= comment.id %>/comments/new">Reply</a>
    </li>

  <% }) %>
</ul>






