    <input
      type="text"
      name="post[search]"

      id="post_search">
    </label>

    <a><input type="submit"  value="Go!"><span class="glyphicon glyphicon-search"></span></a>
  </form>
</nav>
  <ul class="group">
  <% subs.each(function(sub){  %>

    <li><a href="#/subs/<%= sub.id %>"><%= sub.escape("title") %></a>

    </li>
 <% }); %>
</ul>




<ul>
