  <script>
  var pics = ["paper_flower", "braid", "garden"];
  var i =0;
    setInterval(function(){

        $(".home").removeClass(pics[i % 3]).addClass(pics[(i+1)% 3]);
        i++;
    }, 2000);
  </script>

